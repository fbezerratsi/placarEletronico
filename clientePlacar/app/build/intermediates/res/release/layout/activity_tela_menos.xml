   	<Button
   	    android:id="@+id/btTempo1"
   	    android:layout_width="100dp"
   	    android:layout_height="60dp"
   	    android:layout_alignParentLeft="true"
   	    android:layout_alignRight="@+id/btGol1"
   	    android:layout_below="@+id/btFalta1"
   	    android:layout_marginTop="22dp"
   	    android:background="@drawable/acao_button_tempo"
   	    android:onClick="tempo"
   	    android:text="Tempo 1 -"
   	    android:textSize="20dp"
   	    android:textStyle="bold" />
    
   	<Button
   	    android:id="@+id/btGol2"
   	    android:layout_width="150dp"
   	    android:layout_height="90dp"
   	    android:layout_alignBaseline="@+id/btGol1"
   	    android:layout_alignBottom="@+id/btGol1"
   	    android:layout_alignParentRight="true"
   	    android:background="@drawable/acao_button_gol"
   	    android:onClick="gol"
   	    android:text="Gol 2 -"
   	    android:textColor="#fff"
   	    android:textSize="30dp" />

   	<Button
   	    android:id="@+id/btTempo2"
   	    android:layout_width="100dp"
   	    android:layout_height="60dp"
   	    android:layout_above="@+id/btGol1"
   	    android:layout_alignLeft="@+id/btFalta2"
   	    android:layout_alignParentRight="true"
   	    android:background="@drawable/acao_button_tempo"
   	    android:onClick="tempo"
   	    android:text="Tempo 2 -"
   	    android:textSize="20dp"
   	    android:textStyle="bold" />

   	<Button
   	    android:id="@+id/btGol1"
   	    android:layout_width="150dp"
   	    android:layout_height="90dp"
   	    android:layout_alignParentLeft="true"
   	    android:layout_below="@+id/btTempo1"
   	    android:layout_marginTop="22dp"
   	    android:background="@drawable/acao_button_gol"
   	    android:onClick="gol"
   	    android:text="Gol 1 -"
   	    android:textColor="#fff"
   	    android:textSize="30dp" />
   	
