<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:background="#fff" >

        
    <Button
        android:id="@+id/btCronometro"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:onClick="funcaoCronometro"
        android:text="@string/cronometro"
        android:textColor="#fff"
        android:background="@drawable/acao_button_cronometro"
        android:textSize="40dp" />

    <Button
   	    android:id="@+id/btFalta1"
   	    android:layout_width="150dp"
   	    android:layout_height="50dp"
   	    android:layout_alignParentLeft="true"
   	    android:layout_below="@+id/btCronometro"
   	    android:layout_marginTop="16dp"
   	    android:onClick="faltas"
   	    android:text="Faltas 1 -"
   	    android:textColor="#fff"
   	    android:background="@drawable/acao_button_falta"
   	    android:textSize="30dp" />

   	<Button
   	    android:id="@+id/btFalta2"
   	    android:layout_width="150dp"
   	    android:layout_height="50dp"
   	    android:layout_alignBaseline="@+id/btFalta1"
   	    android:layout_alignBottom="@+id/btFalta1"
   	    android:layout_alignParentRight="true"
   	    android:background="@drawable/acao_button_falta"
   	    android:onClick="faltas"
   	    android:text="Faltas 2 -"
   	    android:textColor="#fff"
   	    android:textSize="30dp" />

