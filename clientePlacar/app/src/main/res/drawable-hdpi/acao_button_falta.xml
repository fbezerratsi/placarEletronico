<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#000080"/>
            <corners android:radius="19dp" />
            <stroke
                android:width="2dp"
                android:color="#000080" />
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#0000ff"/>
            <corners android:radius="19dp" />
            <stroke
                android:width="2dp"
                android:color="#0000ff" />
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp" />
        </shape>
    </item>

</selector>
